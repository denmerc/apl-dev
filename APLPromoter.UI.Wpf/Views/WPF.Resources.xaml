    <HierarchicalDataTemplate x:Key="NavigatorChildNodeTemplate">
        <StackPanel Orientation="Horizontal">
			<Image x:Name="OpenFolder" Source="/APLPromoter.UI.Wpf;component/Resources/Images/ContextMenu/Menu-BrownOpenFolder.png" Width="16"></Image>
			
            <TextBlock Text="{Binding NodeTitle, FallbackValue=ChildNavigator}" ToolTip="{Binding NodeCaption}" Padding="4,0,0,0"/>
        </StackPanel>
    </HierarchicalDataTemplate>
    
    <HierarchicalDataTemplate x:Key="NavigatorTemplate" ItemsSource="{Binding Nodes}" ItemTemplate="{StaticResource NavigatorChildNodeTemplate}">
        <StackPanel Orientation="Horizontal">
			<Image x:Name="ClosedFolder" Source="/APLPromoter.UI.Wpf;component/Resources/Images/ContextMenu/Menu-BrownClosedFolder.png" Width="16"></Image>
            <TextBlock Text="{Binding NodeTitle, FallbackValue=Navigator}" ToolTip="{Binding NodeCaption}" FontSize="{DynamicResource DefaultTextSize}" FontFamily="{DynamicResource APLDefault}" Padding="4,0,0,0"/>
        </StackPanel>
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate x:Key="MenuItemTemplate" ItemsSource="{Binding}">
        <TextBlock Text="{Binding NodeTitle}" />
    </HierarchicalDataTemplate>

</ResourceDictionary>