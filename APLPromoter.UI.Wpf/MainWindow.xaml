<Window 
        x:Class="APLPromoter.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:Xaml="clr-namespace:ReactiveUI.Xaml;assembly=ReactiveUI.Xaml"
        xmlns:vm="clr-namespace:APLPromoter.UI.Wpf.ViewModel" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
						
        Title="Promoter V4.0" Background="{x:Null}"
		Icon="Resources/Images/Logos/APL-ICO-Spot-TN.png" 
		WindowStartupLocation="CenterScreen" 
        SizeChanged="Window_SizeChanged"
        IsTabStop="False"
        MinHeight="768" MinWidth="1440"
        mc:Ignorable="d" 
        >
                <!--DataContext="{Binding Source={StaticResource Locator}}"-->
    <Grid>
    	<Grid.Background>
    		<ImageBrush/>
    	</Grid.Background>
        <Xaml:RoutedViewHost Router="{Binding Router}" />
    </Grid>
</Window>
